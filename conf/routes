# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET			/													controllers.Application.index
GET			/hello											controllers.Application.hello
GET			/comet											controllers.Application.comet
GET			/sse												controllers.Application.sse
GET    		/:tournament/:player      					controllers.Application.join(player: String, tournament: String)
GET			/send												controllers.Application.sendEvent


GET			/socketJoin								controllers.Application.socketJoin(player: String, tournament: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
